NAME = ex02
CC = clang++
FLAGS = -Wall -Werror -Wextra

#тЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:* SOURCES тЬз*:я╜ея╛ЯтЬз: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜ея╛Я: *тЬзя╜ея╛Я:#

SRC = Array.cpp

#тЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:* COLORS тЬз*:я╜ея╛ЯтЬз: *тЬзя╜ея╛Я:* тЬз *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜ея╛Я: *тЬзя╜ея╛Я:#

ORANGE	= 	\033[38;5;208m
YELLOW2	= \033[38;5;221m
WHITE	= \033[38;5;230m
BLUE		= \033[38;5;75m

#тЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:*  RULES  тЬз*:я╜ея╛ЯтЬз: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜ея╛Я: *тЬзя╜ея╛Я:#

all: $(NAME)

$(NAME): $(SRC)
	@$(CC) $(FLAGS) $(SRC) -o $(NAME)
	@echo "$(ORANGE)\nтЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:*тЬзтЬз*:я╜ея╛ЯтЬзтЬзя╜е"
	@echo "$(BLUE)тЬи\t    с┤Дс┤Пс┤Нс┤Ш╔к╩Яс┤Ас┤Ы╔кс┤П╔┤ с┤Ес┤П╔┤с┤З!\t\tтЬи"
	@echo "$(ORANGE)тЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:*тЬзтЬз*:я╜ея╛ЯтЬзтЬзя╜е"

stars:
	@echo "$(BLUE)\nтЬзя╜ея╛Я: *тЬзя╜ея╛Я:*  *:я╜ея╛ЯтЬз*:я╜ея╛ЯтЬзтЬзя╜е *тЬзя╜ея╛Я:*тЬзтЬз*:я╜ея╛ЯтЬзтЬзя╜е\n"

clean:
	@echo "$(ORANGE)ЁЯМ╗\t    ЁЯД▓ ЁЯД╗ ЁЯД┤ ЁЯД░ ЁЯД╜ ЁЯД╕ ЁЯД╜ ЁЯД╢ ...\t\tЁЯТл$(WHITE)\n"
	rm -f ./*~ ./*# a.out $(OBJ)
	@echo "\n$(YELLOW2)тЬи\t    Cleaning Done!$(WHITE)\t\tтЪб"

fclean: clean stars
	@echo "$(ORANGE)ЁЯМ╗\t    тДЭЁЭХЦЁЭХЮЁЭХаЁЭХзЁЭХЪЁЭХЯЁЭХШ $(NAME)...\tЁЯТл\n$(WHITE)"
	rm -f $(NAME)
	@echo "\n$(YELLOW2)тЬи\t    Removed $(NAME)!$(WHITE)\t\tтЪб"

re: fclean all
